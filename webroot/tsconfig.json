{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": false,
        "sourceMap": true,
        "baseUrl": ".",
        "noImplicitAny": false,
        "types": [
            "webpack-env",
            "mocha",
            "chai"
        ],
        "paths": {
            "@/*": [ "src/*" ],
            "@assets/*": [ "src/assets/*" ],
            "@components/*": [ "src/components/*" ],
            "@data/*": [ "src/data/*" ],
            "@locales/*": [ "src/locales/*" ],
            "@models/*": [ "src/models/*" ],
            "@network/*": [ "src/network/*" ],
            "@pages/*": [ "src/pages/*" ],
            "@plugins/*": [ "src/plugins/*" ],
            "@router/*": [ "src/router/*" ],
            "@store/*": [ "src/store/*" ],
            "@styles.common/*": [ "src/styles.common/*" ],
            "@tests/*": [ "tests/*" ],
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts"
    ]
}
